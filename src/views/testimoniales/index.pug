extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        .row
            .col-md-12
                include ../layout/partials/testimoniales
            .col-md-12
                h2.text-center Agrega un testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center #{error.mensaje}
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales" method="post")
                            .form-group
                                label(for="nombre") Nombre
                                input(type="text", class="form-control", placeholder="Tu nombre", name="nombre", value= nombre)
                            .form-group
                                label(for="email") Email
                                input(type="email", class="form-control", placeholder="Tu email", name="email" , value= email)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", cols="30", rows="10", placeholder="Tu mensaje", class="form-control") #{mensaje}
                            input.btn.btn-success.btn-block(type="submit",value="Agregar")